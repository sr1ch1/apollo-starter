{
  "name": "apollo-starter",
  "version": "1.0.0",
  "description": "Project that provides a starting point for a GraohQL project based on Apollo Server 4.",
  "main": "server/firebase/server.js",
  "scripts": {
    "generate": "graphql-codegen --config codegen.yml",
    "dev": "ts-node-dev -r graphql-import-node/register src/server/fastify/server.ts | pino-pretty --colorize",
    "dev:standalone": "ts-node-dev src/server/standalone/server.ts | pino-pretty --colorize",
    "build": "node scripts/build.js",
    "build:self-contained": "yarn build && cd build && yarn --immutable",
    "build:firebase": "yarn build:self-contained && shx rm -f build/package.json && shx cp package.firebase.json build/package.json",
    "build:package": "trace-pkg -c trace-pkg.yml",
    "clean": "shx rm -rf build coverage *.tsbuildinfo *.log api.zip",
    "start": "node build/src/server/fastify/server.js | pino-pretty --colorize",
    "start:standalone": "node build/src/server/standalone/server.js | pino-pretty --colorize",
    "start:firebase": "firebase emulators:start --only functions",
    "deploy:firebase": "firebase deploy --only functions",
    "lint": "eslint \"src/**/*.ts\" \"src/models/**/*.graphql\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"src/models/**/*.graphql\" --fix --quiet",
    "prepare": "husky install && npm run generate",
    "test": "jest --group=unit --passWithNoTests",
    "test:integration": "jest --group=integration",
    "test:api": "jest --group=api",
    "test:all": "jest --group=unit --group=integration --group=api",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sr1ch1/apollo-starter.git"
  },
  "keywords": [
    "apollo",
    "server",
    "starter",
    "boilerplate"
  ],
  "author": "Sandro Richi <email@sandrorichi.de> (http://sandrorichi.de/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sr1ch1/apollo-starter/issues"
  },
  "homepage": "https://github.com/sr1ch1/apollo-starter#readme",
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@apollo/datasource-rest": "^4.3.2",
    "@apollo/server": "^4.3.0",
    "@as-integrations/fastify": "^1.2.0",
    "@fastify/rate-limit": "^7.6.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/under-pressure": "^8.2.0",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.14",
    "add": "^2.0.6",
    "express": "^4.18.2",
    "fastify": "^4.11.0",
    "fastify-autoload": "^3.13.0",
    "fastify-cli": "^5.7.0",
    "fastify-plugin": "^4.4.0",
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^4.1.1",
    "fluent-json-schema": "^4.0.0",
    "graphql": "^16.6.0",
    "graphql-import-node": "^0.0.5",
    "graphql-tag": "^2.12.6",
    "json-schema-to-ts": "^2.6.2",
    "make-fetch-happen": "^11.0.2",
    "ms": "^2.1.3",
    "pino": "^8.8.0",
    "yarn": "^1.22.19",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/introspection": "^2.2.3",
    "@graphql-codegen/typescript": "^2.8.5",
    "@graphql-codegen/typescript-resolvers": "^2.7.10",
    "@graphql-eslint/eslint-plugin": "^3.13.1",
    "@jest/globals": "^29.3.1",
    "@sr1ch1/apollo-fetcher-stub": "^1.0.0",
    "@swc/core": "^1.3.23",
    "@swc/jest": "^0.2.24",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/eslint": "^8.4.10",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "graphql-config": "^4.3.6",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-node": "^29.3.1",
    "jest-runner-groups": "^2.2.0",
    "lint-staged": "^13.1.0",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "recursive-copy": "^2.0.14",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "trace-pkg": "^0.5.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsutils": "^3.21.0",
    "typescript": "^4.9.4"
  }
}
