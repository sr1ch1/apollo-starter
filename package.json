{
  "name": "apollo-starter",
  "version": "1.1.0",
  "description": "Project that provides a starting point for a GraphQL project based on Apollo Server 4.",
  "main": "server/firebase/server.js",
  "scripts": {
    "generate": "graphql-codegen --config codegen.yml",
    "dev": "ts-node-dev -r graphql-import-node/register src/server/fastify/server.ts | pino-pretty --colorize",
    "dev:standalone": "ts-node-dev src/server/standalone/server.ts | pino-pretty --colorize",
    "build": "node scripts/build.js",
    "build:self-contained": "yarn build && cd build && yarn --immutable",
    "build:firebase": "yarn build:self-contained && shx rm -f build/package.json && shx cp package.firebase.json build/package.json",
    "build:package": "trace-pkg -c trace-pkg.yml",
    "build:image": "docker build -t apollo-starter .",
    "clean": "shx rm -rf build coverage *.tsbuildinfo *.log api.zip",
    "start": "node build/src/server/fastify/server.js | pino-pretty --colorize",
    "start:docker": "docker run --publish 4000:4000 apollo-starter",
    "start:standalone": "node build/src/server/standalone/server.js | pino-pretty --colorize",
    "start:firebase": "firebase emulators:start --only functions",
    "deploy:firebase": "firebase deploy --only functions",
    "lint": "eslint \"src/**/*.ts\" \"src/models/**/*.graphql\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"src/models/**/*.graphql\" --fix --quiet",
    "prepare": "husky install && npm run generate",
    "test": "jest --group=unit --passWithNoTests",
    "test:integration": "jest --group=integration",
    "test:api": "jest --group=api",
    "test:all": "jest --group=unit --group=integration --group=api",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sr1ch1/apollo-starter.git"
  },
  "keywords": [
    "apollo",
    "server",
    "starter",
    "boilerplate"
  ],
  "author": "Sandro Richi <email@sandrorichi.de> (http://sandrorichi.de/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sr1ch1/apollo-starter/issues"
  },
  "homepage": "https://github.com/sr1ch1/apollo-starter#readme",
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.2.2",
    "@apollo/server": "^4.9.5",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/under-pressure": "^8.3.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.0",
    "add": "^2.0.6",
    "express": "^4.18.2",
    "fastify": "^4.24.3",
    "fastify-autoload": "^3.13.0",
    "fastify-cli": "^5.9.0",
    "fastify-plugin": "^4.5.1",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0",
    "fluent-json-schema": "^4.2.1",
    "graphql": "^16.8.1",
    "graphql-import-node": "^0.0.5",
    "graphql-tag": "^2.12.6",
    "json-schema-to-ts": "^2.9.2",
    "make-fetch-happen": "^13.0.0",
    "ms": "^2.1.3",
    "pino": "^8.17.0",
    "yarn": "^1.22.21",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@jest/globals": "^29.7.0",
    "@sr1ch1/apollo-fetcher-stub": "^1.4.1",
    "@swc/core": "^1.3.96",
    "@swc/jest": "^0.2.29",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/eslint": "^8.44.7",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.18.10",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "cosmiconfig": "^8.3.6",
    "cosmiconfig-toml-loader": "^1.0.0",
    "cosmiconfig-typescript-loader": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "graphql-config": "^5.0.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-docblock": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-runner": "^29.7.0",
    "jest-runner-groups": "^2.2.0",
    "lint-staged": "^15.1.0",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.1.0",
    "pretty-quick": "^3.1.3",
    "recursive-copy": "^2.0.14",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "trace-pkg": "^0.5.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsutils": "^3.21.0",
    "typescript": "^5.2.2"
  }
}
